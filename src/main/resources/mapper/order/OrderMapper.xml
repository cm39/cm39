<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cm39.cm39.order.mapper.OrderMapper">
    <insert id="insertOrder" parameterType="OrderDto">
        insert into `Order` (ord_no, user_id, ord_name, total_ord_price, ord_stat_code)
        values (#{ordNo}, #{userId}, #{ordName}, #{totalOrdPrice}, #{ordStatCode})
    </insert>

    <update id="updateOrderStatusByOrderNo" parameterType="OrderDto">
        update `Order`
        set ord_stat_code = #{ordStatCode}
        where ord_no = #{ordNo}
    </update>

<!--    테스트 용-->
<!--    전체 삭제-->
    <delete id="deleteAll">
        delete
        from `Order`
    </delete>

<!--    전체 개수-->
    <select id="countAll" resultType="int">
        select count(*)
        from `Order`
    </select>

<!--    전체 목록 조회-->
    <select id="selectAll" resultType="OrderDto">
        select *
        from `Order`
    </select>
</mapper>
