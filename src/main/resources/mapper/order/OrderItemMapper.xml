<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cm39.cm39.order.mapper.OrderItemMapper">
    <insert id="insertOrderItem" parameterType="OrderItemDto">
        insert into OrderItem (ord_no, ord_item_seq, prod_no, item_no, item_qty, item_price, ord_item_stat_code)
        values (#{ordNo}, #{ordItemSeq}, #{prodNo}, #{itemNo}, #{itemQty}, #{itemPrice}, #{ordItemStatCode})
    </insert>


<!--    테스트 용-->
<!--    전체 삭제-->
    <delete id="deleteAll">
        delete
        from OrderItem
    </delete>

<!--    전체 개수-->
    <select id="countAll" resultType="int">
        select count(*)
        from OrderItem
    </select>

<!--    전체 목록 조회-->
    <select id="selectAll" resultType="OrderItemDto">
        select *
        from OrderItem
    </select>
</mapper>
